{
  "name": "markdown-to-pdf",
  "version": "1.0.0",
  "description": "Convert markdown with Mermaid diagrams to PDF",
  "main": "src/root/app/index.js",
  "scripts": {
    "start": "node src/root/app/index.js",
    "dev": "nodemon src/root/app/index.js",
    "test": "jest",
    "build": "echo 'No build step required for Node.js'",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:dry-run": "node scripts/release.js patch --dry-run"
  },
  "keywords": ["markdown", "pdf", "mermaid", "converter"],
  "author": "LiquidLogicLabs",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^21.5.2",
    "marked": "^9.1.6",
    "mermaid": "^10.6.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "jsdom": "^23.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 