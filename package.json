{
  "name": "markdown-mermaidjs-to-pdf",
  "version": "1.0.0",
  "description": "Convert markdown with Mermaid diagrams to PDF",
  "main": "src/root/app/index.js",
  "scripts": {
    "start": "node src/root/app/index.js",
    "dev": "nodemon src/root/app/index.js",
    "test": "jest",
    "build": "echo 'No build step required for Node.js'",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:dry-run": "node scripts/release.js patch --dry-run",
    "publish-readme": "node scripts/publish-readme.js"
  },
  "keywords": [
    "markdown",
    "pdf",
    "mermaid",
    "converter"
  ],
  "author": "LiquidLogicLabs",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "jsdom": "^23.0.1",
    "marked": "^9.1.6",
    "mermaid": "^10.6.1",
    "path": "^0.12.7",
    "puppeteer": "24.14.0",
    "rimraf": "6.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
